@page "/dashboard"
@using CashFlo.Services
@using CashFlo.Services.Interface
@inject IDebtServices DebtService
@inject IUserServices UserService
@inject CashFlo.Services.TransactionServices TransactionService
@inject NavigationManager NavigationManager

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 20px;
        height: 100%;
        box-shadow: 4px 0 10px rgba(0, 0, 0, 0.2);
    }

        .sidebar h3 {
            font-size: 22px;
            color: #ecf0f1;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 15px;
            }

                .sidebar ul li a {
                    color: #ecf0f1;
                    text-decoration: none;
                    font-size: 16px;
                    transition: color 0.3s;
                }

                    .sidebar ul li a:hover {
                        color: #3498db;
                    }

    .content {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
    }

    .dashboard-summary {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        flex: 1 1 calc(33.333% - 20px);
        max-width: calc(33.333% - 20px);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
        }

        .card h5 {
            font-size: 1.25rem;
            color: #333;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 2rem;
            font-weight: bold;
            color: #4caf50;
            margin: 0;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 0.75rem;
            text-align: left;
            border: 1px solid #dee2e6;
        }

        .table thead {
            background-color: #f8f9fa;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }
</style>

<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><NavLink href="/dashboard">Dashboard</NavLink></li>
            <li><NavLink href="/transactions">Transactions</NavLink></li>
            <li><NavLink href="/debt">Debt</NavLink></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h3>Financial Dashboard</h3>

        <!-- Summary Cards -->
        <div class="dashboard-summary">
            <div class="card">
                <h5>Total Transactions</h5>
                <p>@totalTransactionCount</p>
            </div>
            <div class="card">
                <h5>Total Transaction Value</h5>
                <p>@totalTransactionValue.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalTransactionCount;
    private decimal totalTransactionValue;

    protected override void OnInitialized()
    {
        try
        {
            // Replace with actual logic to get logged-in username.
            var username = "Admin";

            // Fetch data synchronously.
            totalTransactionCount = TransactionService.GetTotalTransactionCount(username);
            totalTransactionValue = TransactionService.GetTotalTransactionValue(username);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }
}
