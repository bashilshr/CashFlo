@page "/login"
@using CashFlo.Model
@using CashFlo.Services.Interface
@inject IUserServices UserServices
@inject NavigationManager NavigationManager

<h3>CashFlo</h3>
<style>
    /* Global styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: #FFFAEC;
        padding: 20px;
    }

    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        background: #F5ECD5;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        width: 800px;
        max-width: 100%;
        padding: 20px;
    }

    .form-wrapper {
        flex: 1;
        padding: 30px;
    }

        .form-wrapper header {
            font-size: 2rem;
            color: #3D3D3D;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-wrapper p {
            font-size: 1rem;
            color: #3D3D3D;
            margin-bottom: 20px;
        }

        .form-wrapper input {
            display: block;
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            transition: 0.3s;
        }

            .form-wrapper input:focus {
                border-color: #578E7E;
                box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            }

        .form-wrapper select {
            display: block;
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            outline: none;
            transition: 0.3s;
        }

        .form-wrapper .button {
            background: linear-gradient(135deg, #578E7E, #3D3D3D);
            color: #FFFAEC;
            border: none;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            border-radius: 8px;
            padding: 12px;
            transition: 0.3s;
        }

            .form-wrapper .button:hover {
                background: linear-gradient(135deg, #3D3D3D, #578E7E);
            }

        .form-wrapper .error-message {
            color: red;
            text-align: center;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

    .register-link {
        text-align: center;
        margin-top: 20px;
    }

        .register-link a {
            color: #578E7E;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

            .register-link a:hover {
                color: #3D3D3D;
            }

    .image-wrapper {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-wrapper img {
            max-width: 100%;
            height: auto;
        }
</style>

<body>
    <div class="container">
        <!-- Form Section -->
        <div class="form-wrapper">
            <header>Login</header>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <p class="error-message">@errorMessage</p>
            }

            <form @onsubmit="HandleLogin">
                <input type="text" @bind="login.Username" placeholder="Username" required />
                <input type="password" @bind="login.Password" placeholder="Password" required />
                <select @bind="selectedCurrency">
                    <option disabled selected>Select Currency</option>
                    @foreach (var currency in Enum.GetValues(typeof(Currency)))
                    {
                        <option value="@currency">@currency</option>
                    }
                </select>
                <input type="submit" class="button" value="Login" />
            </form>

            <!-- Register Link -->
            <div class="register-link">
                <p>
                    Don't have an account?
                    <a href="/">Register here</a>
                </p>
            </div>
        </div>

        <!-- Image Section -->
        <div class="image-wrapper">
            <img src="wwwroot/finimg.png" />
        </div>
    </div>
</body>

@code {
    private User login = new User();
    private string errorMessage = string.Empty;
    private Currency selectedCurrency;

    private void HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(login.Username) || string.IsNullOrWhiteSpace(login.Password) || selectedCurrency == default)
        {
            errorMessage = "All fields are required!";
            return;
        }

        // Validate login credentials using UserService
        if (UserServices.Login(login))
        {
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = "Invalid username or password!";
        }
    }
}
